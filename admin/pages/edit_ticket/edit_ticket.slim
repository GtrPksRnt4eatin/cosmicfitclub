<!DOCTYPE html>

html

  head

    == no_scaling

    title Cosmicfit Admin

    == css [ 'fonts', 'site', 'chosen', 'jquery.json-viewer', '/admin/edit_ticket', 'selectize' ]
    == js  [ 'jquery', 'rivets', 'lib', 'rv_select', 'rv_money', 'moment', 'selectize.min', 'flatpickr', 'rv_dates']
    == js  [ 'element', 'ev_channel', 'jquery.chosen.min', 'jquery.timepicker.min', 'jquery.json-viewer' ]
    == js  [ 'elements/custy_selector', '/admin/edit_ticket' ]

  html
    #stars

    #content

      .tile

        .tuplet
          .label Event:
          .value 
            | [# {data.ticket.event.id}] {data.ticket.event.name}

        .tuplet
          .label Included Sessions:
          .value
            | { data.ticket.old.included_sessions }

        .tuplet
          .label Purchased By: 
          .value 
            | [# {data.ticket.customer.id}] {data.ticket.customer.name}

        .tuplet rv-if='data.ticket.old.recipient'
          .label Purchased For: 
          .value 
            | [# {data.ticket.old.recipient.id}] {data.ticket.old.recipient.name}

        .tuplet
          .label Price:
          .value
            | { data.ticket.price | money }

        .tuplet
          .label Payment ID:
          .value 
            a rv-href='data.ticket.new.payment.stripe_id | stripe' target='_blank' { data.ticket.new.payment.stripe_id }

      .tile

        select rv-select='data.recipient'
          option value='0' selected='true' No Customer
          option rv-each-custy='data.customers' rv-value='custy.id' {custy.name} ( {custy.email} )

        button rv-on-click='ctrl.assign_recipient' Change Recipient

      .tile

        select.split_sessions rv-multiselect='data.split_sessions'
          option rv-each-sess='data.sessions' rv-value='sess.id'
            | {sess.start_time | eventstart } - {sess.end_time | time} : {sess.title}

        select rv-select='data.split_recipient'
          option value='0' selected='true' No Customer
          option rv-each-custy='data.customers' rv-value='custy.id' {custy.name} ( {custy.email} )
          
        button rv-on-click='ctrl.split_ticket' Split Ticket

        div {data.ticket}

      .tile
        
        H2 Session Passes

        #pass_list
          .pass rv-each-pass='data.ticket.new.passes'
            div[] { pass.session.title }
            div[] { pass.session.start_time | eventstart }
            div[] [# { pass.customer.id}] { pass.customer.name } ( {pass.customer.email} )
            input type='checkbox' rv-checked='pass.checked_in'

      .tile

        H2 Payment

        #payment
          | [# { data.ticket.new.payment.id }] Purchased on { data.ticket.new.payment.timestamp | simpledate } For { data.ticket.new.payment.amount | money }

      .tile
        pre#json-viewer