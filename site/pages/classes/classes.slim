  body.p2
  
    #stars
    
    == include_slim('slim/partials/header')
      
    .content

      .tile.classdef rv-each-class='data.classes'
        img rv-src='class.image_url'
          div.classnfo
            .classname 
              | { class.name }
            hr width='60%'
            .classdescription
              | { class.description }
            br
            .schedule rv-each-sched='class.schedules'
              | { sched.rrule | rrule } { sched.start_time | time } { sched.teacher }

    == include_slim('slim/partials/footer')

